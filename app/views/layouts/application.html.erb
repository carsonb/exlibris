<!DOCTYPE html>
<html>
  <head>
    <title><% if content_for?(:title) %><%= yield(:title) %> | <% end %><%= t("application.name") %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= preload_pack_asset "media/fonts/UnifrakturCook-Bold.ttf" %>
    <%= preload_pack_asset "media/fonts/IBMPlexMono-Regular.ttf" %>
    <%= preload_pack_asset "media/fonts/IBMPlexMono-Italic.ttf" %>
    <%= preload_pack_asset "media/fonts/IBMPlexMono-Bold.ttf" %>
    <%= preload_pack_asset "media/fonts/IBMPlexMono-BoldItalic.ttf" %>

    <%= favicon_pack_tag "media/favicons/favicon.ico", rel: "apple-touch-icon", type: "image/png", sizes: "180x180" %>
    <%= favicon_pack_tag "media/favicons/apple-touch-icon.png", rel: "apple-touch-icon", type: "image/png", sizes: "180x180" %>
    <%= favicon_pack_tag "media/favicons/favicon-32x32.png", rel: "icon", type: "image/png", sizes: "32x32" %>
    <%= favicon_pack_tag "media/favicons/favicon-16x16.png", rel: "icon", type: "image/png", sizes: "16x16" %>
    <meta name="msapplication-TileColor" content="#ffec24">
    <meta name="theme-color" content="#fced56">

    <% if ENV["COLLECT_ANALYTICS"].present? %>
      <script defer data-domain="exlibrisrpg.com" src="https://plausible.io/js/plausible.js"></script>
    <% end %>
  </head>

  <body class="fill | bg-black plex-mono" data-controller="annotation">
    <% if content_for?(:pre_header) %>
      <%= yield(:pre_header) %>
    <% end %>

    <div class="fill | fill-with | bg-white">
      <header id="content">
        <%= yield :header %>
      </header>

      <main class="fill-with">
        <% if content_for?(:banner) %>
          <%= content_for :banner %>
        <% end %>

        <div class="container | centre stack | p-l">
          <div class="stack">
            <% if flash.any? %>
              <div id="flash">
                <% flash.each do |key, value| %>
                  <div class="flash <%= key %>"><%= value %></div>
                <% end %>
              </div>
            <% end %>

            <%= yield %>
          </div>
        </div>
      </main>

      <footer>
        <%= yield :footer %>
      </footer>
    </div>
  </body>
</html>
