<% content_for(:title) do %><%= t(".title") %><% end %>

<h1><%= t(".title") %></h1>

<% @tag_categories.each do |tag_category| %>
  <h2><%= tag_category.name %></h2>

  <div class="cluster">
    <div>
      <% tag_category.tags.each do |tag| %>
        <div>
          <em>
            <%= link_to tag.name, tag %><small>(<%= tag.entries.count %>)</small>
          </em>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
